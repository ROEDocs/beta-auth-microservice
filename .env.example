# Debug Mode (Set to True for development, False for production)
DEBUG=True

# Google OAuth credentials (required)
# Create these at https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Security secrets (use strong random values, e.g., openssl rand -hex 32)
SESSION_SECRET=your-very-strong-random-string  # For OAuth state
JWT_SECRET=your-very-strong-jwt-secret  # For signing JWT tokens

# CORS settings
# Set to your frontend URL or leave empty to allow all origins (not recommended for production)
CORS_ORIGIN=http://localhost:3000

# Token expiration settings
ACCESS_TOKEN_EXPIRE_MINUTES=60  # 1 hour
REFRESH_TOKEN_EXPIRE_DAYS=7  # 1 week
